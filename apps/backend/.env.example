# ─── App ─────────────────────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://chatting_user:chatting_password@localhost:5432/chatting_agent_dev

# ─── Auth ─────────────────────────────────────────────────────────────────────
JWT_SECRET=your-super-secret-key-min-32-chars-long-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-change-in-production

# ─── OpenAI ───────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o

# ─── Meta (WhatsApp / Instagram / Facebook) ───────────────────────────────────
# Get from https://developers.facebook.com/apps/
META_APP_SECRET=your_meta_app_secret
META_VERIFY_TOKEN=your_custom_verify_token_string

# WhatsApp Business — Cloud API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# Instagram — Graph API
INSTAGRAM_ACCESS_TOKEN=your_instagram_page_access_token

# Facebook Messenger — Graph API
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token

# ─── Telegram ─────────────────────────────────────────────────────────────────
# Get from @BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=your_custom_secret_for_telegram_webhook

# ─── SMS — Africa's Talking ───────────────────────────────────────────────────
# Get from https://account.africastalking.com/
AFRICAS_TALKING_API_KEY=your_at_api_key
AFRICAS_TALKING_USERNAME=your_at_username
AFRICAS_TALKING_SHORT_CODE=your_short_code

# ─── Email — SendGrid ─────────────────────────────────────────────────────────
# Get from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# ─── Paystack ─────────────────────────────────────────────────────────────────
# Get from https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── n8n ──────────────────────────────────────────────────────────────────────
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key
N8N_API_URL=http://localhost:5678
# URL the backend is reachable at from within n8n (Docker internal)
BACKEND_URL=http://backend:3001

# ─── Expo Push Notifications ──────────────────────────────────────────────────
EXPO_ACCESS_TOKEN=your_expo_access_token
